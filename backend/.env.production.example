# Database (PostgreSQL in production)
DATABASE_URL="postgresql://user:password@host:5432/getitdone?schema=public"

# JWT
JWT_SECRET="your-production-secret-key-min-32-characters"
JWT_REFRESH_SECRET="your-production-refresh-secret-key-min-32-characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="production"

# CORS
FRONTEND_URL="https://getitdone.app"

# Google Calendar OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://api.getitdone.app/api/calendar/google/callback"

# Microsoft Outlook OAuth
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_REDIRECT_URI="https://api.getitdone.app/api/calendar/outlook/callback"

